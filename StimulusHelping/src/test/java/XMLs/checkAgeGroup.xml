<?xml version="1.0"
        encoding="UTF-8"?>

<!DOCTYPE suite
        SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Adstia_Testing_Suite"
       parallel="tests"
       thread-count="3">

    <!-- Test for Chrome Browser -->

    <test name="ChromeTests">
        <parameter name="browser"
                   value="chrome"/>
        <classes>
            <class name="Tests.checkAgeGroup"/>
        </classes>
    </test>

    <!-- Test for Firefox Browser -->

    <test name="FirefoxTests">
        <parameter name="browser"
                   value="firefox"/>
        <classes>
            <class name="Tests.checkAgeGroup"/>
        </classes>
    </test>

    <!-- Test for Edge Browser -->

    <test name="EdgeTests">
        <parameter name="browser"
                   value="edge"/>
        <classes>
            <class name="Tests.checkAgeGroup"/>
        </classes>
    </test>

</suite>